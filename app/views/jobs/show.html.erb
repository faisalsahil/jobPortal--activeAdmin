<%- model_class = Job -%>
<div class="page-header">
  <h3>Job Description</h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Job Type:</strong></dt>
  <dd><%= @job.title %></dd>

  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @job.category %></dd>


  <dt><strong><%= model_class.human_attribute_name(:department) %>:</strong></dt>
  <dd><%= @job.department %></dd>


  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @job.location %></dd>


  <dt><strong><%= model_class.human_attribute_name(:salary) %>:</strong></dt>
  <dd><%= @job.salary %></dd>


  <!--<dt><strong><%#= model_class.human_attribute_name(:experience) %>:</strong></dt>-->
  <!--<dd><%#= @job %></dd>-->


  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @job.description %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jobs_path, :class => 'btn' %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_job_path(@job), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              job_path(@job),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
