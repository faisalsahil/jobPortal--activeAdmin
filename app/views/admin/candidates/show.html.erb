<%= javascript_include_tag "twitter/bootstrap" %>
<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "bootstrap-responsive" %>

<script>

    $('#myTab a').click(function (e) {
        e.preventDefault();
        $(this).tab('show');
    })

    $('a[data-toggle="tab"]').on('shown', function (e) {
        e.target // activated tab
        e.relatedTarget // previous tab
    })


</script>

<ul class="nav nav-tabs candidate-new-nav" id="myTab">
  <li class="active"><a href="#home" data-toggle="tab">Detail</a></li>
  <li><a href="#profile" data-toggle="tab">Q&A</a></li>
  <li><a href="#messages" data-toggle="tab">Emails</a></li>
  <li><a href="#settings" data-toggle="tab">Settings</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="home">
    <%= render :partial => "admin/candidates/show_candidate_details.html.erb" %>
  </div>
  <div class="tab-pane" id="profile">
    <%= render :partial => "admin/candidates/show_candidate_answers.html.erb" %>
  </div>
  <div class="tab-pane" id="messages">...</div>
  <div class="tab-pane" id="settings">...</div>
</div>