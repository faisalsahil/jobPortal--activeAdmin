<%= javascript_include_tag "twitter/bootstrap" %>
<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "bootstrap-responsive" %>
<%#= stylesheet_link_tag "application" %>

<div class="control-group" xmlns="http://www.w3.org/1999/html">

  <h3 class="panel">Question & Answers</h3>
  <% index = 1 %>
  <table class="table table-striped panel">
    <thead>
    <tr>
      <th><strong>Sr.No</strong></th>
      <th><strong></stromg>Question</strong></th>
      <th><strong>Answer</strong></th>
    </tr>
    </thead>
    <tbody>
    <% @candidate.answers.each do |answer| %>
        <tr>
          <td><%= index %><%= ":" %></td>
          <td><%= answer.question.question_name %></td>
          <% if answer.answer == "1" %>
              <td><%= "Yes" %></td>
          <% elsif answer.answer == "0" %>
              <td><%= "No" %></td>
          <% else %>
              <td><%= answer.answer %></td>
          <% end %>
          <% index = index+1 %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>